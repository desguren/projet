<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Travel Japan</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>

    <div class="nav-side-menu">
        <div class="brand">Travel Japan</div>
        <i class="fa fa-bars fa-2x toggle-btn" data-toggle="collapse" data-target="#menu-content"></i>

        <div class="menu-list">

            <ul id="menu-content" class="menu-content collapse out">
                <li>
                    <a>@Html.ActionLink("Accueil", "Index", "Home")</a>
                </li>
                @if (Session["Pseudo"] != null)
                {
                    <li data-toggle="collapse" data-target="#ville" class="collapsed">
                        <a href="#">Ville <span class="arrow"></span></a>
                    </li>
                    <ul class="sub-menu collapse" id="ville">
                        <li> @Html.ActionLink("Ville", "Index", "Villes")</li>
                        <li> @Html.ActionLink("Ajouter une ville", "Create", "Villes")</li>
                        <li> @Html.ActionLink("Modifier une ville", "Edit", "Villes")</li>
                        <li> @Html.ActionLink("Supprimer une ville", "Delete", "Villes")</li>
                    </ul>
                }
                else
                {
                    <li data-toggle="collapse" data-target="#products" class="collapsed">
                        <a> @Html.ActionLink("Ville", "Index", "Villes")</a>
                    </li>
                }

                @if (Session["Pseudo"] != null)
                {
                    <li data-toggle="collapse" data-target="#hotel" class="collapsed">
                        <a href="#">Hotel <span class="arrow"></span></a>
                    </li>
                    <ul class="sub-menu collapse" id="hotel">
                        <li> @Html.ActionLink("Hotel", "Index", "Hotels")</li>
                        <li> @Html.ActionLink("Ajouter un hotel", "Create", "Hotels")</li>
                        <li> @Html.ActionLink("Modifier un hotel", "Edit", "Hotels")</li>
                        <li> @Html.ActionLink("Supprimer un hotel", "Delete", "Hotels")</li>
                    </ul>
                }
                else
                {
                    <li data-toggle="collapse" data-target="#products" class="collapsed">
                        <a>@Html.ActionLink("Hotel", "Index", "Hotels")</a>
                    </li>
                }

                @if (Session["Pseudo"] != null)
                {
                    <li data-toggle="collapse" data-target="#activite" class="collapsed">
                        <a href="#">Activite <span class="arrow"></span></a>
                    </li>
                    <ul class="sub-menu collapse" id="activite">
                        <li> @Html.ActionLink("Activite", "Index", "Activites")</li>
                        <li> @Html.ActionLink("Ajouter une activite", "Create", "Activites")</li>
                        <li> @Html.ActionLink("Modifier une activites", "Edit", "Activites")</li>
                        <li> @Html.ActionLink("Supprimer une activites", "Delete", "Activites")</li>
                    </ul>
                }
                else
                {
                <li data-toggle="collapse" data-target="#products" class="collapsed">
                     <a>@Html.ActionLink("Activite", "Index", "Activites")</a>
                 </li>
                }

                <li data-toggle="collapse" data-target="#service" class="collapsed">
                    <a href="#"> Admin <span class="arrow"></span></a>
                </li>
                <ul class="sub-menu collapse" id="service">
                    <li>@Html.ActionLink("Connexion", "Login", "Admins")</li>
                    @if (Session["Pseudo"] != null)
                    {
                        <li><a href="@Url.Action("Logout","Admins")">Deconnexion</a></li>
                    }

                </ul>


                <li data-toggle="collapse" data-target="#products" class="collapsed">
                    <a>@Html.ActionLink("À propos de", "About", "Home")</a>
                </li>
                <li data-toggle="collapse" data-target="#products" class="collapsed">
                    <a>@Html.ActionLink("Contact", "Contact", "Home")</a>
                </li>

            </ul>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Travel Japan</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
