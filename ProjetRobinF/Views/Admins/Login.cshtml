@model ProjetRobinF.Models.Admin

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-md-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Login
            </div>
            <div class="card-body">
                @if (Session["Pseudo"] == null)
                {
                    using (Html.BeginForm("Login", "Admins", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.LabelFor(m => m.Pseudo)
                            @Html.TextBoxFor(m => m.Pseudo, new { @class = "form-control", @placeholder = "Pseudo" })

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password)
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                        </div>
                        <div class="form-group">
                            <input type="submit" name="submit" class="btn btn-primary" value="Login" />
                        </div>
                    }
                }
                else
                {
                    <p>Erreur deja connecter</p>
                }

            </div>
        </div>
    </div>
</div>